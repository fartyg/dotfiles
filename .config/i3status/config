general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 5
        color_good = '#2f343f'
		color_degraded = '#ebcb8b'
		color_bad = '#ba5e57'
}

order += "cpu_temperature 0"
order += "disk /"
order += "wireless wlp2s0"
order += "volume master"
order += "battery 1"
order += "tztime local"

cpu_temperature 0 {
        format = "%degrees Â°C"
        path = "/sys/class/thermal/thermal_zone0/temp"
}

disk "/" {
        format = "%free Free"
}

wireless wlp2s0 {
        format_up = "%essid"
        format_down = "Disconnected"
}

volume master {
        format = "%volume"
        format_muted = "Muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 1 {
	last_full_capacity = true
        format = "%status %percentage"
        format_down = "No Battery"
        status_chr = "Charging"
        status_bat = "Battery"
        status_unk = "Unknown"
        status_full = "Charged"
        path = "/sys/class/power_supply/BAT0/uevent"
        low_threshold = 10
}

tztime local {
		format = "%time"
		format_time = "%a %-d %b %H:%M "
}

