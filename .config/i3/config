# bindsym $mod+8 workspace $workspace8
# bindsym $mod+9 workspace $workspace9
# bindsym $mod+0 workspace $workspace0

# move focused container to workspace
bindsym $mod+Control+a move container to workspace $workspace1
bindsym $mod+Control+s move container to workspace $workspace2
bindsym $mod+Control+d move container to workspace $workspace3
bindsym $mod+Control+f move container to workspace $workspace4
bindsym $mod+Control+u move container to workspace $workspace5
bindsym $mod+Control+i move container to workspace $workspace6
# bindsym $mod+Control+7 move container to workspace $workspace7
# bindsym $mod+Control+8 move container to workspace $workspace8
