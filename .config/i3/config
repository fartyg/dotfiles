bindsym $mod+b exec --no-startup-id ~/.scripts/firefox_toggle.sh
bindsym $mod+section exec --no-startup-id ~/.scripts/spotify_toggle.sh
bindsym $mod+m exec --no-startup-id ~/.scripts/mpv_toggle.sh

# run pulseaudio
exec --no-startup-id "nitrogen --restore"
exec --no-startup-id "picom -b --experimental-backends"
exec --no-startup-id "redshift"
exec --no-startup-id "rofi -show drun"
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle
bindsym Print exec scrot -e 'mv $f ~/Pictures/screenshots'
bindsym XF86MonBrightnessUp exec brightnessctl s +100 # increase screen brightness
bindsym XF86MonBrightnessDown exec brightnessctl s 100- # decrease screen brightness

bindsym $mod+Shift+Pause exec systemctl poweroff -i
bindsym $mod+apostrophe exec --no-startup-id "alacritty -e zsh -c \\". ~/.zshrc; nvim\\""
bindsym $mod+odiaeresis exec --no-startup-id thunderbird
bindsym $mod+adiaeresis exec --no-startup-id pavucontrol
bindsym $mod+t exec --no-startup-id thunar

mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym g exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"

# handling power button
bindsym XF86PowerOff exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the power button. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# 'Source' Xresources at startup
exec --no-startup-id "xrdb -merge ~/.Xresources"
